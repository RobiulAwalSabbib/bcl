<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    tools:context=".ekyc.Ekyc_Introducer_Information_Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tv_introinfo_ekyc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="--Application For Account Opening--"
                    android:textAlignment="center"
                    android:textColor="#47A3EC"
                    android:textSize="22dp"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:id="@+id/tv_intoinfo_ekyc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Introducer's Information (Optional)"
                    android:textColor="#D704FB"
                    android:textSize="20dp" />


                <EditText
                    android:id="@+id/et_intro_name_ekyc"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:drawableRight="@drawable/ic_baseline_person_24"
                    android:hint="Introducer Name"
                    android:inputType="textPersonName" />

                <TextView
                    android:id="@+id/tvAcNoError_ekyc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#F44336"
                    android:visibility="gone">

                </TextView>

                <EditText
                    android:id="@+id/et_intro_acc_ekyc"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:drawableRight="@drawable/ic_baseline_security_24"
                    android:hint="Introducer Account"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/et_intro_nid_ekyc"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:drawableRight="@drawable/ic_baseline_phone_iphone_24"
                    android:hint="NID/Smart Card No"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/et_intro_mbl_ekyc"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:drawableRight="@drawable/ic_baseline_phone_iphone_24"
                    android:hint="Mobile Number"
                    android:inputType="number" />

                <TextView
                    android:id="@+id/tv_otherbank_ekyc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Other Bank Account Information"
                    android:textColor="#D704FB"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tv_otherban_ekyc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Do You Have Other Bank A/c"
                    android:textColor="@color/purple_200" />

                <RadioGroup
                    android:id="@+id/rg_otherbank_ekyc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/rb_ob_yes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:text="Yes" />

                        <RadioButton
                            android:id="@+id/rb_ob_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="No" />
                    </LinearLayout>
                </RadioGroup>

                <TextView
                    android:id="@+id/tv_creditcard_ekyc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Credit Card Information"
                    android:textColor="#D704FB"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tv_creditcrd_ekyc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Do You Have Credit Card"
                    android:textColor="@color/purple_200" />

                <RadioGroup
                    android:id="@+id/rg_creditcrd_ekyc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/rb_cd_yes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:text="Yes" />

                        <RadioButton
                            android:id="@+id/rb_cd_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="No" />
                    </LinearLayout>

                </RadioGroup>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:gravity="center|top"
                    android:orientation="vertical"
                    android:paddingLeft="50dp"
                    android:paddingRight="50dp">

                    <Button
                        android:id="@+id/btn_submit_ekyc"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="#2196F3"
                        android:text="Submit">

                    </Button>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
